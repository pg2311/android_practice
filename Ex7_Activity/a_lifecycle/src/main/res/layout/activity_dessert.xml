<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dessert"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--scaleType 속성
    centerCrop: 이미지를 비율에 맞게 확대하여 ImageView의 크기를 완전히 채웁니다.
    fitCenter: 이미지를 비율에 맞게 축소하여 ImageView의 크기에 맞춥니다.
    fitXY: 이미지를 강제로 ImageView 크기에 맞추며 비율을 무시합니다.
    -->

    <TextView
        android:layout_width="282dp"
        android:layout_height="90dp"
        android:layout_gravity="top|left"
        android:gravity="center"
        android:text="생명주기"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/share_button"

        android:layout_width="98dp"
        android:layout_height="94dp"
        android:layout_gravity="top|right"
        android:scaleType="fitCenter"
        android:src="@drawable/share" />


    <!--    <ImageView-->
    <!--        android:id="@+id/imageView2"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="645dp"-->
    <!--        android:layout_gravity="center|center_horizontal"-->

    <!--        app:srcCompat="@drawable/bakery_back" />-->

    <ImageView
        android:id="@+id/imageDessert"
        android:layout_width="126dp"
        android:layout_height="115dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/cupcake" />

    <TextView
        android:layout_width="246dp"
        android:layout_height="154dp"
        android:layout_gravity="bottom"
        android:text="디저트 개수 : "
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvCount"
        android:layout_width="128dp"
        android:layout_height="154dp"
        android:layout_gravity="bottom|right"

        android:textSize="30sp" />
</FrameLayout>