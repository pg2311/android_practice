<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <!-- TODO 1. 두번튼을 수평으로 나열하고 가중치(비율)주기 1/3버튼, 2/3버튼비율 지정하기  -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1/3 버튼"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="2/3 버튼"/>
    </LinearLayout>

    <!-- TODO 2. RED/GREEN/BLUE/YEL 텍스트 위치 지정하기
        gravity: 뷰의 내부 컨텐츠의 정렬 방법
        layout_gravity: 부모 레이아웃에서 뷰가 어디에 위치할 것인가 결정
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff0000"

            android:gravity="top|center"

            android:text="RED"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00ff00"

            android:gravity="start|center"

            android:text="GREEN"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#0000ff"
            android:textColor="@color/white"

            android:gravity="bottom|end"

            android:text="BLUE"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffff00"

            android:gravity="center"

            android:text="YEL"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="default"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="gravity=center"
            android:background="#00ff00"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="right|bottom"
            android:text="gravity=right | bottom"

            android:background="#0000ff"
            android:textColor="@color/white"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:gravity="center"
            android:layout_gravity="end"
            android:text="gravity=center"

            android:background="#ffff00"
            android:textSize="30sp"/>

    </LinearLayout>

</LinearLayout>